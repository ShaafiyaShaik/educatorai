# Educator AI Administrative Assistant Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=Educator AI Administrative Assistant
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration (PostgreSQL only)
# Example Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres?sslmode=require
DATABASE_URL=postgresql://postgres:password@host:5432/database?sslmode=require

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Configuration
# OPTION 1: Use Hugging Face (Free, Local Processing)
# Set USE_LOCAL_AI=true to enable Hugging Face AI features
# Note: First time will download ~500MB model
USE_LOCAL_AI=false
HUGGINGFACE_MODEL=gpt2

# OPTION 2: Use OpenAI (Paid API)
# Leave empty to use Hugging Face instead
OPENAI_API_KEY=

# Email Configuration (Optional - leave empty to disable email features)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# University System Integration (Optional)
UNIVERSITY_API_BASE_URL=https://api.university.edu
UNIVERSITY_API_KEY=your-university-api-key

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/educator_assistant.log